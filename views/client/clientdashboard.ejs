        <div class="leftsidebar">
            <input type="checkbox" id="check">
            <label for="check" class="checkbtn">
                <i class="fas fa-bars"></i>
            </label>
            <h2>E-PASHUDHAN</h2>
            <div class="sidebar">

                <a class="active" href="dashboard">DASHBOARD</a>
                <a href="buy">BUY</a>
                <a href="ordershistory">ORDERS HISTORY</a>
                <a href="clientprofile">PROFILE</a>
                <a href="/client/logout">LOGOUT</a>
            </div>
        </div>
        <div class="content">
            <div class="contentbox">
                Orders Today(in litres)
                <div class="contentvalues">
                    <%= locals.today %>
                </div>
            </div>
            <div class="contentbox">
                Orders This Month(in litres)
                <div class="contentvalues">
                    <%= locals.month %>
                </div>
            </div>
            <div class="contentbox">
                Orders Overall(in litres)
                <div class="contentvalues">
                    <%= locals.overall %>
                </div>
            </div>
        </div>
        <div class="pastorders">
            <h3>RECENT ORDERS STATUS</h3>
            <table class="table" id="table1">
                <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Milk(in litres)</th>
                        <th scope="col">Sell id</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i= locals.buydata.data.length-1; i>=buydata.data.length-8; i--) { 
                        if(i==-1 || buydata.data.length==undefined){
                            break
                        }
                        %>
                        <tr>
                            <th scope="row">
                                <%=  locals.buydata.data[i].date%>
                            </th>
                            <td>
                                <%=  locals.buydata.data[i].milkamt%>
                            </td>
                            <td>
                                <%=  locals.buydata.data[i].uid%>
                            </td>
                            <td>
                                <%=  locals.buydata.data[i].status%>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
        <div class="rightsidebar">
            <div class="todayprice">
                <h3>Today Price</h3><br>
                <div class="price">
                    <%= locals.price %>â‚¹
                </div>
                <span id="dt">as on <%= locals.date %>
                        <%= locals.time %> </span>
            </div>
            <div class="details">
                <br>
                <div class="email">
                    Email: <%= locals.email %> <br>
                </div>
                <br>
                <div class="companyname">
                    Company Name: <%= locals.companyname %>
                </div>
                <br>
                <div class="companyaddress">
                    Company Address: <%= locals.companyaddress %>
                </div>
            </div>
        </div>
    </div>
