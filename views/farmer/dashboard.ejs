</head>

<body>
    <div class="grid">
        <div class="container">
            <nav class="navbar navbar-dark bg-dark">
                <div class="container-fluid">
                    <a href="#" class="navbar-brand">E-pashudhan</a>
                    <button type="button" class="navbar-toggler" data-bs-toggle="collapse"
                        data-bs-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <div class="navbar-nav">
                            <a href="#" class="nav-item nav-link active">Dashboard</a>
                            <a href="sell" class="nav-item nav-link">Sell</a>
                            <a href="profile" class="nav-item nav-link">Profile</a>
                        </div>
                        <div class="navbar-nav ms-auto">
                            <!-- <a href="#" class="nav-item nav-link">Logout</a> -->
                        </div>
                    </div>
                </div>
            </nav>
            <div class="sidebar">
                <center>
                    <h4><b>User details</b></h4>
                </center>
                <img src="/img/userprofileimg.jpg" alt="">
                <div class="details">
                    Name:<%= name %><br><br>
                        Phoneno:<%= phno %><br><br>
                            Email:<%= email %>
                </div>
                <a href="sell"><button>SELL</button></a>
                <form action="/users/logout" method="post">
                    <button>LOGOUT</button>
                </form>
            </div>
            <div class="contents">
                <div class="content1">
                    <p><b>Today's Earnings</b></p>
                    <p class="inlitres">(₹)</p>
                    <div class="contentvalues">
                        <%= today %>
                    </div>
                </div>
                <div class="content2">
                    <p><b>Earnings Last 30 Days</b></p>
                    <p class="inlitres">(₹)</p>
                    <div class="contentvalues">
                        <%= thirtydays %>
                    </div>
                </div>
                <div class="content3">
                    <p><b>Overall</b></p>
                    <p class="inlitres">(₹)</p>
                    <div class="contentvalues">
                        <%= overall %>
                    </div>
                </div>
            </div>
            <div id="graph1">
                <!-- <img src="/IMG-Worlds-of-Adventure-Ramadan-Promotions-Image.jpg" alt="" class="croc"> -->

                <!-- <canvas id="canvas"></canvas> -->
            </div>

            <div id="graph2">
                <div class="todayprice">
                <h3>Today Price</h3><br>
                <div class="price">
                <%= price %>₹ 
                </div>
                <span id="dt">as on <%= locals.date %> <%= locals.time  %> </span>
                </div>
            </div>
        </div>
    </div>
    <div>

    </div>





</body>

<script>

    var milk = '<%- JSON.stringify(milk) %>'
    milk = String(milk)
    milk = JSON.parse(milk)

    var labels = '<%- JSON.stringify(labels) %>'
    labels = String(labels)
    labels = JSON.parse(labels)
  

    // var milkdata = [], labels = []
    // for (let i = 1; i < selldata.Data.length; i++) {
    //     milkdata.push(selldata.Data[i].milkamt)
    //     labels.push(selldata.Data[i].date)
    // }
    var options = {

        chart: {
            type: 'bar',
        },
        title:{
            text:"MILK SOLD IN LAST 7 DAYS"
        },
        series: [{
            name: 'milk',

            data: milk
        }],
        xaxis: {
            categories: labels
        },
        fill: {
        colors: ['#000000']
      }
    }

    var chart = new ApexCharts(document.querySelector("#graph1"), options);

    chart.render();
</script>
